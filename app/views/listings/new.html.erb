<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="text-center mb-12">
    <h2 class="text-3xl font-bold text-gray-900">List Your Fire Sale</h2>
    <p class="mt-2 text-gray-600">Everything must go! (Including our dreams)</p>
  </div>
  
  <% if current_user.company_name.blank? %>
    <div class="max-w-2xl mx-auto bg-yellow-50 border border-yellow-200 rounded-lg p-6 mb-8 text-center">
      <p class="text-yellow-800 mb-4">Please complete your company profile before creating a listing</p>
      <%= link_to "Complete Your Profile", edit_profile_path, 
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700" %>
    </div>
  <% end %>

  <%= render 'form', listing: @listing %>
</div> 