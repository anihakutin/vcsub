<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="bg-white rounded-lg shadow-lg overflow-hidden">
    <div class="p-8">
      <div class="flex justify-between items-start mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Your Profile</h1>
        <%= link_to "Edit Profile", edit_profile_path, 
            class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700" %>
      </div>

      <div class="space-y-6">
        <div>
          <h3 class="text-lg font-medium text-gray-900">Name</h3>
          <p class="mt-1 text-gray-600"><%= @user.name.presence || "Not set" %></p>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900">Company</h3>
          <p class="mt-1 text-gray-600"><%= @user.company_name.presence || "Not set" %></p>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900">Funded By</h3>
          <p class="mt-1 text-gray-600"><%= @user.funded_by.presence || "Not set" %></p>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900">Funding Raised</h3>
          <p class="mt-1 text-gray-600">
            <% if @user.funding_raised? %>
              $<%= number_with_delimiter(@user.funding_raised) %>
            <% else %>
              Not set
            <% end %>
          </p>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900">Contact Preference</h3>
          <p class="mt-1 text-gray-600">
            <%= @user.contact_preference&.titleize || "Not set" %>
          </p>
        </div>

        <% if @user.contact_preference == "twitter" && @user.twitter_handle.present? %>
          <div>
            <h3 class="text-lg font-medium text-gray-900">Twitter/X Handle</h3>
            <p class="mt-1 text-gray-600"><%= @user.twitter_handle %></p>
          </div>
        <% end %>

        <div class="pt-6 border-t">
          <h3 class="text-lg font-medium text-gray-900">Email</h3>
          <p class="mt-1 text-gray-600"><%= @user.email %></p>
        </div>
      </div>
    </div>
  </div>
</div> 