<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="bg-white rounded-lg shadow-lg overflow-hidden">
    <div class="p-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-8">Edit Profile</h1>

      <%= form_with(model: @user, url: profile_path, class: "space-y-6") do |f| %>
        <div>
          <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.text_field :name, class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= f.label :company_name, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.text_field :company_name, class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= f.label :funded_by, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.text_field :funded_by, class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= f.label :funding_raised, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1 relative rounded-lg shadow-sm">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-500 sm:text-sm">$</span>
            </div>
            <%= f.number_field :funding_raised, step: :any, class: "appearance-none block w-full pl-7 px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= f.label :contact_preference, "Preferred Contact Method", 
              class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.select :contact_preference, 
                [["Email", "email"], ["Twitter/X", "twitter"]], 
                { include_blank: "Select a contact method" },
                class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>
        </div>
        
        <div>
          <%= f.label :twitter_handle, "Twitter/X Handle", 
              class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.text_field :twitter_handle, 
                placeholder: "@username",
                class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>
        </div>

        <div class="flex justify-end pt-6">
          <%= link_to "Cancel", profile_path, class: "mr-4 inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50" %>
          <%= f.submit "Save Changes", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div> 